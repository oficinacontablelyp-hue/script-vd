local MiscTab = Window:CreateTab("Misc")

-- Sección Utilities
MiscTab:CreateSection("Utilities")

local autoRespawnEnabled = false
local respawnConnection = nil

MiscTab:CreateToggle({
    Name = "Auto Respawn",
    CurrentValue = false,
    Callback = function(v)
        autoRespawnEnabled = v
        
        if v then
            respawnConnection = LP.CharacterAdded:Connect(function(character)
                -- Cuando aparece un nuevo personaje, monitorear su salud
                task.wait(1)  -- Esperar a que cargue
                
                local humanoid = character:WaitForChild("Humanoid", 5)
                if humanoid then
                    humanoid.Died:Connect(function()
                        task.wait(2)  -- Esperar 2 segundos después de morir
                        
                        if autoRespawnEnabled then
                            -- Intentar reaparecer
                            pcall(function()
                                -- Buscar botón de respawn en la UI
                                local playerGui = LP:FindFirstChild("PlayerGui")
                                if playerGui then
                                    for _, gui in ipairs(playerGui:GetChildren()) do
                                        if gui:IsA("ScreenGui") then
                                            for _, button in ipairs(gui:GetDescendants()) do
                                                if button:IsA("TextButton") and 
                                                   (button.Text:lower():find("respawn") or 
                                                    button.Text:lower():find("revive") or
                                                    button.Text:lower():find("reaparecer")) then
                                                    firesignal(button.MouseButton1Click)
                                                    break
                                                end
                                            end
                                        end
                                    end
                                end
                                
                                -- También enviar evento de respawn
                                LP:SetAttribute("RequestRespawn", true)
                            end)
                        end
                    end)
                end
            end)
            
            -- Conectar también para personaje actual
            if LP.Character then
                local humanoid = LP.Character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    humanoid.Died:Connect(function()
                        task.wait(2)
                        if autoRespawnEnabled then
                            LP:SetAttribute("RequestRespawn", true)
                        end
                    end)
                end
            end
            
        else
            if respawnConnection then
                respawnConnection:Disconnect()
                respawnConnection = nil
            end
        end
    end
})

MiscTab:CreateButton({
    Name = "Limpiar Todo",
    Callback = function()
        stopESPLoop()
        stopGeneratorESPLoop()
        stopSpeedBoostWatcher()
        stopGeneratorBoostWatcher()
        stopPerfectSkillCheck()
        stopNoSkillCheck()
        
        Rayfield:Notify({
            Title = "Limpieza Completada",
            Content = "Todos los hacks han sido desactivados",
            Duration = 3
        })
    end
})

MiscTab:CreateButton({
    Name = "Recargar Script",
    Callback = function()
        Rayfield:Notify({
            Title = "Recargando",
            Content = "El script se recargará en 3 segundos",
            Duration = 3
        })
        task.wait(3)
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tu-usuario/tu-repo/main/script.lua"))()
    end
})

