-- Sección Anti-Ralentización
SurvivorTab:CreateSection("Anti-Ralentización")

local antiRalentizacionEnabled = false
local antiRalentizacionConnection = nil

SurvivorTab:CreateToggle({
    Name = "Anti-Ralentización",
    CurrentValue = false,
    Callback = function(v)
        antiRalentizacionEnabled = v
        
        if v then
            -- Conexión inmediata para prevenir cualquier ralentización
            antiRalentizacionConnection = RunService.Heartbeat:Connect(function()
                local char = LP.Character
                if not char then return end
                
                -- PREVENIR cualquier tipo de ralentización
                pcall(function()
                    -- 1. Eliminar atributo Immobile (si existe)
                    char:SetAttribute("Immobile", false)
                    
                    -- 2. Forzar walkspeed normal (o con speedboost)
                    local humanoid = char:FindFirstChildOfClass("Humanoid")
                    if humanoid then
                        local targetSpeed = 16
                        if speedBoostEnabled then
                            targetSpeed = 16 * speedBoostValue
                        end
                        humanoid.WalkSpeed = targetSpeed
                    end
                    
                    -- 3. Eliminar efectos de slow
                    for _, effect in ipairs(char:GetChildren()) do
                        if effect:IsA("BoolValue") and effect.Name:lower():find("slow") then
                            effect:Destroy()
                        elseif effect:IsA("NumberValue") and effect.Name:lower():find("slow") then
                            effect:Destroy()
                        end
                    end
                end)
            end)
            
            -- También aplicar inmediatamente
            task.spawn(function()
                local char = LP.Character
                if char then
                    char:SetAttribute("Immobile", false)
                    local humanoid = char:FindFirstChildOfClass("Humanoid")
                    if humanoid then
                        humanoid.WalkSpeed = 16 * (speedBoostEnabled and speedBoostValue or 1)
                    end
                end
            end)
            
        else
            if antiRalentizacionConnection then
                antiRalentizacionConnection:Disconnect()
                antiRalentizacionConnection = nil
            end
        end
    end
})

